<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.saltwater.brandnewworld">
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        tools:replace="android:icon, android:theme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".NewsActivity"></activity>
        <activity android:name=".FirstActivity"></activity>
        <activity android:name=".picSelect.TestPicActivity"></activity>
        <activity android:name=".picSelect.BitmapCache"></activity>
        <activity android:name=".picSelect.ImageGridActivity"></activity>
        <activity android:name=".picSelect.PhotoActivity"></activity>
        <activity android:name=".picSelect.PublishedActivity"></activity>
        <activity android:name=".NewsDetailActivity"></activity>

    </application>

</manifest>
